<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ABC Retail</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CLDV6212_POE_Part1_st10152431.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div style="background-color: #2B4F61">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="color:antiquewhite">ABC Retail </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div>
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index" style="color:antiquewhite">Home</a>
                        </li>
                        <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="AddItem" style="color:antiquewhite">Add</a>
                        </li>
                        <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="BuyItem" style="color:antiquewhite">Buy</a>
                        </li>
                        <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="CollectItem" style="color:antiquewhite">Collect</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container" style="color:antiquewhite">
            &copy; 2024 - CLDV6212_POE_Part1_st10152431 - <a asp-area="" asp-controller="Home" asp-action="CollectItem">More About Order</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
